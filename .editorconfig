# EditorConfig for JavaScript project
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Specific rules for Markdown files
[*.md]
indent_size = 4

# Specific rules for JSON files
[*.json]
indent_size = 2
